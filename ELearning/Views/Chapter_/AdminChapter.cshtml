@model IEnumerable<ELearning.Models.Chapter_>

@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="wrapper">
    @Html.Partial("_PartialSideBar")
    <div class="container-fluid">
        <section class="bg-light col-md-12 col-lg-12 col-12 pt-5 pb-5">
            <h3 class="text-muted pt-5 dashBoardTextSize">Liste des Chapitres</h3>
            <hr class="hrColor " />
                    <table class="table table-responsive-md table-striped table-info text-muted border shadow">
                        <tr class="colorHeader">
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>
                                Appartient au cours
                            </th>
                            <th></th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <b> @Html.DisplayFor(modelItem => item.name)</b>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Class_.name)
                                </td>
                                                           
                                <td class="text-success">    @Html.ActionLink("Editer", "Edit", new { id = item.id }) </td>
                                <td class="text-danger">      @Html.ActionLink("Supprimer", "Delete", new { id = item.id })</td>

</tr>
                        }

                    </table>

        </section>
    </div>
    <div style="height:1000px;"></div>
    </div>